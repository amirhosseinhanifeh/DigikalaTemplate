@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<ALO.DomainClasses.Entity.Product.tbl_ProductCustomFields>
@{
    ViewData["Title"] = "لیست فیلدها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row align-items-center">
    <div class="col text-right">
        <a type="button" asp-action="Create" class="btn btn-primary" asp-route-subcategoryId="@ViewBag.SubCategoryId" asp-route-categoryId="@ViewBag.CategoryId">افزودن</a>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="">
            <div class="card-header border-0">

            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead>
                        <tr>
                            <th>نام فیلد</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    @if(item.FieldType==ALO.DomainClasses.Entity.Product.FieldType.DROPDOWN)
                                    {
                                    <a class="btn btn-danger" asp-route-fieldId="@item.Id" asp-controller="ProductCustomFieldOption" asp-action="Index">افزودن مقدار</a>
                                        
                                    }
                                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">حذف</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>