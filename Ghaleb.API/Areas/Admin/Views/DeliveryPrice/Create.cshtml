@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Ghaleb.API

@model ALO.DomainClasses.Entity.Order.tbl_DeliveryPrice

@{
    ViewData["Title"] = "افزودن شیوه ارسال";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">مشخصات</a>
    </li>
</ul>
<form id="frmValues">
    <input asp-for="Id" hidden />
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Name"></label>
                    <input class="form-control" type="text" asp-for="Name" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="Cost"></label>
                    <input class="form-control" type="text" asp-for="Cost" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="FromPrice"></label>
                    <input class="form-control" type="text" asp-for="FromPrice" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 form-group">
            <button class="btn btn-primary" id="btnSave" type="submit">ذخیره</button>
            <button class="btn btn-danger" type="button" data-dismiss="modal" aria-label="Close">بیخیال</button>
        </div>
    </div>

</form>
@section Scripts{

    <script>

        $("#btnSave").click(function(e) {

            e.preventDefault();
            $.ajax({
                url: "@Url.Action("Edit")",
                method: "POST",
                data: $("#frmValues").serialize(),

            }).done(function(result) {
                if (result.status == 0) {
                    Swal.fire(
                        'تبریک !',
                        result.message,
                        'success'
                    )
                }

            }).fail(function() {


            });
        });
    </script>
}