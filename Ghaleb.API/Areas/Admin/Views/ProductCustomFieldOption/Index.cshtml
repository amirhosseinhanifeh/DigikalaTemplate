@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<ALO.DomainClasses.Entity.Product.tbl_ProductCustomFieldsOptionValues>
@{
    ViewData["Title"] = "لیست فیلدها";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row align-items-center">
    <div class="col text-right">
        <a type="button" asp-action="Create" class="btn btn-primary" asp-route-fieldId="@ViewBag.FieldId">افزودن</a>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="">
            <div class="card-header border-0">

            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead>
                        <tr>
                            <th>مقدار فیلد</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Value</td>
                                <td>
                                    <a class="btn btn-danger" asp-route-id="@item.Id" asp-action="Delete">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>