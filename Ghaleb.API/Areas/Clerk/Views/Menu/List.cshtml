@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<ALO.DomainClasses.Entity.Menu.tbl_Menu>

@{
    ViewData["Title"] = "لیست منو ها";
    Layout = "~/Areas/Clerk/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <form method="post">
                <button type="submit" class="btn btn-success">ساخت منو ها</button>
            </form>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead>
                        <tr>
                            <th>نام</th>
                            <th>لینک</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Link</td>
                                <td>
                                    <a class="btn btn-dark" asp-route-id="@item.Id" asp-action="Details">مشاهده</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

