@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Ghaleb.API

@model ALO.DomainClasses.Entity.Product.tbl_Product
@{
    ViewData["Title"] = "افزودن دسته بندی";
    Layout = "~/Areas/Clerk/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary" asp-action="Index" asp-route-productId="@ViewBag.Id">بازگشت به لیست</a>
    </div>
</div>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">مشخصات</a>
    </li>
</ul>
<form id="frmValues">
    برچسب برای محصول @Model.Title
    <input asp-for="Id" hidden />
    <input name="ProductId" hidden value="@ViewBag.Id" />
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="form-group col-6">
                    <label>تگ</label>

                    <select asp-for="ProductTags"  name="tags" class="form-control" multiple="multiple">
                        @foreach (var item in Model.ProductTags)
                        {
                            <option>@item.Name</option>
                        }
                    </select>
                </div>

            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-3 form-group">
            <button class="btn btn-primary" id="btnSave" type="button">ذخیره</button>
            <button class="btn btn-danger" type="button" data-dismiss="modal" aria-label="Close">بیخیال</button>
        </div>
    </div>

</form>
@section Scripts{

    <script>
        $(document).ready(function() {
            $('#ProductTags').select2({
                tags: true,
                tokenSeparators: [',', ',']
            });
        });
        $("#btnSave").click(function(e) {

            e.preventDefault();
            $.ajax({
                url: "@Url.Action("Create")",
                method: "POST",
                data: $("#frmValues").serialize()

            }).done(function(result) {
                if (result.status == 0) {
                    Swal.fire(
                        'تبریک !',
                        result.message,
                        'success'
                    )
                }

            }).fail(function() {


            });
        });

    </script>
}