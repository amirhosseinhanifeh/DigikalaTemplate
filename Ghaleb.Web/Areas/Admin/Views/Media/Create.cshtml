@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Ghaleb.API

@model ALO.DomainClasses.Entity.IMG.tbl_Image



@{
    ViewData["Title"] = "افزودن رسانه";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">مشخصات</a>
    </li>
</ul>
<form id="frmValues">
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Id"></label>
                    <image-upload Id="img" For="Id"></image-upload>
                </div>
                <div class="form-group col-6">
                    <label asp-for="VideoDetail.Title"></label>
                    <input class="form-control" type="text" asp-for="VideoDetail.Title" />
                </div>

                <div class="form-group col-6">
                    <label asp-for="VideoDetail.Description"></label>
                    <textarea class="form-control" rows="30" asp-for="VideoDetail.Description" ></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 form-group">
            <button class="btn btn-primary" id="btnSave" type="submit">ذخیره</button>
            <button class="btn btn-danger" type="button" data-dismiss="modal" aria-label="Close">بیخیال</button>
        </div>
    </div>

</form>