@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Ghaleb.API

@model ALO.DomainClasses.Entity.IMG.tbl_Image



@{
    ViewData["Title"] = "ویرایش سوال";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">مشخصات</a>
    </li>
</ul>
<form id="frmValues">
    <input hidden asp-for="Id" />
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Id"></label>
                    <image-upload Id="img" For="Id"></image-upload>
                </div>
                <div class="form-group col-6">
                    <label asp-for="VideoDetail.Title"></label>
                    <input class="form-control" type="text" asp-for="VideoDetail.Title" />
                </div>

                <div class="form-group col-6">
                    <label asp-for="VideoDetail.Description"></label>
                    <textarea class="form-control" rows="8" asp-for="VideoDetail.Description"></textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 form-group">
            <button class="btn btn-primary" id="btnSave" type="submit">ذخیره</button>
            <button class="btn btn-danger" type="button" data-dismiss="modal" aria-label="Close">بیخیال</button>
        </div>
    </div>

</form>

@section Scripts{
    <script>

        $("#btnSave").click(function (e) {

            e.preventDefault();
            $.ajax({
                url: "@Url.Action("Edit")",
                method: "POST",
                data: $("#frmValues").serialize(),

            }).done(function (result) {
                if (result.status == 0) {
                    Swal.fire(
                        'تبریک !',
                        result.message,
                        'success'
                    )
                    $('#exampleModal').modal('hide');
                }

            }).fail(function () {


            });
        });
    </script>
}