@model ALO.DomainClasses.Entity.Content.tbl_Seo

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Ghaleb.API

@{
    ViewData["Title"] = "مدیریت سئو صفحه اول";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form id="frmValues">
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">
                <input hidden asp-for="Id" />
                <div class="form-group col-6">
                    <label asp-for="PageTitle"></label>
                    <input class="form-control" type="text" asp-for="PageTitle" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="Phone"></label>
                    <input class="form-control" type="text" asp-for="Phone" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="Lat"></label>
                    <input class="form-control" type="text" asp-for="Lat" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="Lng"></label>
                    <input class="form-control" type="text" asp-for="Lng" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="MetaKeyword"></label>
                    <input class="form-control" type="text" asp-for="MetaKeyword" />
                </div>

                <div class="form-group col-6">
                    <label asp-for="MetaDescription"></label>
                    <input class="form-control" type="text" asp-for="MetaDescription" />
                </div>

                <div class="form-group col-6">
                    <label asp-for="Phone"></label>
                    <input class="form-control" type="text" asp-for="Phone" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="PostalCode"></label>
                    <input class="form-control" type="text" asp-for="PostalCode" />
                </div>
                <div class="form-group col-6">
                    <label asp-for="FavIconId"></label>
                    <image-upload Id="img" For="FavIconId"></image-upload>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 form-group">
            <button class="btn btn-primary" id="btnSave" type="submit">ذخیره</button>
        </div>
    </div>

</form>
@section Scripts{

    <script>

    $("#btnSave").click(function (e) {

        e.preventDefault();
        $.ajax({
            url: "@Url.Action("Index")",
            method: "POST",
            data: $("#frmValues").serialize(),

        }).done(function (result) {
            console.log(result);
            if (result.status == 0) {
                Swal.fire(
                    'تبریک !',
                    result.message,
                    'success'
                )
            }

        }).fail(function () {


        });
    });
    </script>
}

