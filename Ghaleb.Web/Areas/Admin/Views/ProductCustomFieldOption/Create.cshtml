@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Ghaleb.API

@model ALO.DomainClasses.Entity.Product.tbl_ProductCustomFieldsOptionValues
@{
    ViewData["Title"] = "افزودن دسته بندی";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary" asp-action="Index">بازگشت به لیست</a>
    </div>
</div>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">مشخصات</a>
    </li>
</ul>
<form id="frmValues">
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="row">

                    <input type="hidden" name="fieldId" value="@ViewBag.FieldId" />

                                <div class="form-group col-6">
                    <label asp-for="Value"></label>
                    <input class="form-control" type="text" asp-for="Value" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 form-group">
            <button class="btn btn-primary" id="btnSave" type="button">ذخیره</button>
            <button class="btn btn-danger" type="button" data-dismiss="modal" aria-label="Close">بیخیال</button>
        </div>
    </div>

</form>
@section Scripts{
    <script src="https://cdn.ckeditor.com/4.16.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor1');
    </script>
    <script>

    $("#btnSave").click(function (e) {

        e.preventDefault();
        for (instance in CKEDITOR.instances) {
            CKEDITOR.instances[instance].updateElement();
        }
        $.ajax({
            url: "@Url.Action("Create")",
            method: "POST",
            data: $("#frmValues").serialize()

        }).done(function (result) {
            if (result.status == 0) {
                Swal.fire(
                    'تبریک !',
                    result.message,
                    'success'
                )
            }

        }).fail(function () {


        });
    });
    </script>
}