@page
@model Ghaleb.Web.Pages.Account.RegisterModel
@{
}
<div class="container-fluid">
    <div class="row box bg p-5" style="height: 100vh;
    display: flex;
    align-items: center;">
        <div class="col-12 col-sm-3 bg-white mx-auto" style="border: 1px solid #e7e7e7;
        border-radius: 5px;
        padding: 82px;">
            <h4 class="text-center">یک حساب کاربری  برای خودت بساز</h4>

            <form class="row mt-5" (submit)="Register($event)">

                <div class="col-12 form-group mt-4">
                    <input name="firstName" class="form-control" value=""
                        placeholder="نام">
                </div>
                <div class="col-12 form-group mt-4">
                    <input name="lastName" class="form-control" value=""
                        placeholder="نام خانوادگی">
                </div>
                <div class="col-12 form-group mt-4">
                    <input name="mobile" class="form-control" value=""
                        placeholder="موبایل">
                </div>
                <div class="col-12 form-group mt-4">
                    <input name="email" class="form-control" value=""
                        placeholder="ایمیل">
                </div>

                <div class="col-12 form-group mt-4">
                    <input name="password" class="form-control" type="password"
                        value="" placeholder="رمز عبور">
                        
                </div>
                <div class="col-12 form-group mt-4">
                    <input name="confirmPassword" class="form-control" type="password"
                        value="" placeholder="تکرار رمز عبور">
                </div>
                <div class="col-12 form-group mt-4">
                    <button type="submit" class="btn btn-danger col-12" style="padding: 11px;
                    border-radius: 25px;">ساخت حساب کاربری</button>
                </div>
                <div class="col-12 form-group mt-4 d-flex
                    justify-content-between">
                    <a asp-page="login">حساب کاربری دارم</a>
                </div>
            </form>

        </div>
    </div>
</div>