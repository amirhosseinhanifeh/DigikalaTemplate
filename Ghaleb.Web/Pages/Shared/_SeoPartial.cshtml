@using System.Reflection
@inject IConfiguration Configuration
@model object

@{
    var title = Model?.GetType()?.GetProperty("PageTitle")?.GetValue(Model, null);
    var keyword = Model?.GetType()?.GetProperty("MetaKeyword")?.GetValue(Model, null);
    var description = Model?.GetType()?.GetProperty("MetaDescription")?.GetValue(Model, null);
    var doIndex = Model?.GetType()?.GetProperty("DoIndex")?.GetValue(Model, null) as bool?;
}
@if (Model != null)
{
    <title>@Configuration["SiteSetting:SiteName"] | @title</title>
    <meta name="keywords" content="@keyword" />
    <meta name="description" content="@description" />
    <meta name="abstract" content="@description" />

    if (doIndex != null)
    {
        if (doIndex == true)
        {
            <meta name="robots" content="index,follow" />
        }
        else
        {
            <meta name="robots" content="noindex,follow" />
        }
    }
    <meta property="og:type" content="WebSite" />
    <meta property="og:image:width" content="711" />
    <meta property="og:image:height" content="309" />
    <meta name="business:contact_data:email" content="site@jelvehaftab.com" />
