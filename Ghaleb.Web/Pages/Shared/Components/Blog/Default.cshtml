@model IEnumerable<ALO.DomainClasses.Entity.Blog.tbl_Blog>
@{
}


<div class="row p-3 mt-5">
    <div class="col-12">
        <h6 class="border-bottom p-2">جدیدترین مطالب</h6>
    </div>
    @foreach (var item in Model)
    {

        <a class="card col-12 col-lg-3 d-flex justify-content-center align-items-center box p-2"
       href="/Mag/Post/@item.Id/@item.Url">
            <img class=" mx-auto"
             style="width: 100%;
            height: 176px;margin: 0;border-radius: 5px 5px 0px 0"
             src="@item.Image.BindImage()"
             alt="Card image
            cap">
            <h6 class="col-12 mt-3">
                @item.Title
            </h6>
            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        نویسنده مدیر سایت
                    </div>
                    <div class="col-6">
                        تاریخ پست : 
                        @item.CreatedDate.ConvertToPesainDate().toPersianNumber()
                    </div>
                </div>

            </div>
        </a>
    }
</div>
