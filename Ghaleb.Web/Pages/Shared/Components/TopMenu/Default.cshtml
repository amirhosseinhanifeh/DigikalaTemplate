@model IEnumerable<ALO.DomainClasses.Entity.LinkManagement.tbl_LinkManagement>
@{
}

<style>
    .top-menu-items {
        font-size: 12px;
        font-weight: 400;
        line-height: 2.17;
        color: #62666d;
    }
</style>
<div class="col-8 mt-1 menu d-none d-md-none d-lg-flex align-items-center mb-1">
    <a class="top-menu-items" style="    font-weight: 600;
    color: #4c4c4c;
    border-left: 1px solid #d3d3d3;
    padding-left: 13px;">
        @ViewBag.Cat
    </a>
    <a class="top-menu-items" asp-page="~/">
       صفحه اصلی
    </a>
    @foreach (var item in Model)
    {
        <a class="top-menu-items" href="@Url.Content(item.Link)">
            @item.Title
        </a>
    }
    <a href="tel:@ViewBag.Phone" style="font-size:12px ;">
        <span style="display:flex;align-items:center">
        پشتیبانی : @ViewBag.Phone
        <i class="fa-regular fa-phone-volume" style="font-size: 15px;margin-right:10px"></i>
        </span>
    </a>
</div>