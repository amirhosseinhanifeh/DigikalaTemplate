@model IEnumerable<ALO.DomainClasses.Entity.LinkManagement.tbl_LinkManagement>
@{
}

<style>
    .top-menu-items {
        font-size: 12px;
        font-weight: 400;
        line-height: 2.17;
        color: #62666d;
    }
</style>
<div class="col-8 mt-1 menu d-none d-md-none d-lg-block">
    <a class="top-menu-items" style="    font-weight: 600;
    color: #4c4c4c;
    border-left: 1px solid #d3d3d3;
    padding-left: 13px;">
      @ViewBag.Cat
    </a>
    @foreach (var item in Model)
    {
        <a class="top-menu-items" href="@Url.Content(item.Link)">
            @item.Title
        </a>
    }

</div>
<div class="col-12 col-lg-4 d-flex justify-content-center p-lg-0">
    <a href="tel:@ViewBag.Phone" class="mt-3"
       style="font-size:12px ;">
        <i class="fa-regular fa-phone-volume" style="font-size: 15px;"></i>
        پشتیبانی : @ViewBag.Phone
    </a>
</div>