@page
@model Ghaleb.Web.Pages.Mag.IndexModel


<div class="container">
    <div class="position-relative">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">خانه</a></li>
                <li class="breadcrumb-item active" aria-current="page">وبلاگ</li>
            </ol>
        </nav>
        <div class="title-page"><strong>وبلاگ</strong></div>
    </div>
    <!--  -->
    <div class="row">
        <div class="col-lg-3">
            <div class="sidebar-blog">
                <div class="side-card">
                    <div class="side-card-main">
                        <div class="block-content">
                            <div class="side-search">
                                <form method="get">
                                    <input id="" type="search" class="search-input form-control" name="query" value="@Model.Query"
                                           placeholder="جستوجوی محصولات ..." autocomplete="off">
                                    <button type="submit" name="" class="search-submit btn">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="side-card">
                    <div class="side-card-main">
                        <div class="block-title"><span>پست های اخیر</span></div>
                        <div class="block-content">
                            <ul class="recentPost-list">
                                @foreach (var item in Model.NewBlogs)
                                {
                                    <li><a asp-page="Post"  asp-route-id="@item.Id" asp-route-url="@item.Url">@item.Title</a></li>
                                }
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="side-card">
                    <div class="side-card-main">
                        <div class="block-title"><span>نظرات اخیر</span></div>
                        <div class="block-content">
                            <ul>
                                @foreach (var item in Model.BlogComments)
                                {
                                    <li><a>@item.Body</a></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="row">
                @foreach (var item in Model.Blogs)
                {
                    <div class="col-lg-4">
                        <div class="news-block mb-4">
                            <span class="onsale">@item.CreatedDate.ConvertToPesainDate()</span>
                            <a asp-page="Post" asp-route-id="@item.Id" asp-route-url="@item.Url" class="img-block">
                                <img src="@item.Image.BindImage(Configuration)" class="img-fluid"
                                     width="100%">
                            </a>
                            <div class="news-detail">

                                <a asp-page="Post" asp-route-id="@item.Id" asp-route-url="@item.Url">
                                    <h3>
                                        @item.Title
                                    </h3>
                                </a>
                                <p>
                                    @item.Abstract
                                </p>
                            </div>
                        </div>
                    </div>

                }

                @{
                    double pageCount = (double)((decimal)Model.TotalCount / Convert.ToDecimal(Model.PageSize));

                }
                <div class="col-12">
                    <ul class="pagination justify-content-center">
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fa fa-chevron-right"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= (int)Math.Ceiling(pageCount); i++)
                        {
                            <li class="page-item">
                                <a asp-route-pagenumber="@i" class="page-link">@i</a>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fa fa-chevron-left"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>