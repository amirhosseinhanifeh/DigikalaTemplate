@page
@model Ghaleb.Web.Pages.FaqModel
@{
    ViewData["Seo"] = Model.Seo;
}
<style>

    .accordion-button::after {
        margin-left: 0;
    }
</style>
@await Component.InvokeAsync("BreadCrumps",Model.Seo)
<div class="col-8 mt-5 mx-auto">
    <p>@Html.Raw(Model.Seo.Description)</p>
    <div class="accordion accordion-flush" id="accordionFlushExample">
        @foreach (var item in Model.Faqs)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="flush-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne-@item.Id" aria-expanded="false" style="justify-content: space-between;
    border: 1px solid #ededed;
    border-radius: 5px;
    margin-bottom: 5px;" aria-controls="flush-collapseOne">
                        @item.Question
                    </button>
                </h2>
                <div id="flush-collapseOne-@item.Id" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body">@item.Answer</div>
                </div>
            </div>
        }
    </div>
</div>