@page
@model Ghaleb.Web.Pages.Profile.Wallet.FinishModel
@{
    Layout = "~/Pages/Profile/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-center h-100 align-items-center flex-column p-5">
    @if (Model.Status)
    {

        <i style="font-size:60px;color:green" class="fa-light fa-circle-check"></i>
        <h1 class="mt-2">@Model.Message</h1>
        <h6 class="mt-2">کیف پول شما با موفقیت شارژ شد</h6>


    }
    else
    {
        <i class="fa-light fa-circle-xmark" style="font-size:60px;color:crimson"></i>
        <h1 class="mt-2">@Model.Message</h1>
    }
    <a asp-page="/profile/wallet/index" class="mt-5 text-primary">بازگشت به کیف پول</a>
</div>