@page "{id}"
@model Ghaleb.Web.Pages.Checkout.FinishModel
@{
}
<div class="d-flex justify-content-center h-100 align-items-center flex-column p-5">
    @if (Model.Status)
    {

        <i style="font-size:60px;color:green" class="fa-light fa-circle-check"></i>
        <h1 class="mt-2">@Model.Message</h1>
        <h6 class="mt-2">از خرید شما متشکریم.یک ایمیل حاوی فاکتور خرید برای شما ارسال شد</h6>
        <span class="mt-2"> شماره سفارش شما @Model.OrderCode</span>


    }
    else
    {
        <i class="fa-light fa-circle-xmark" style="font-size:60px;color:crimson"></i>
        <h1 class="mt-2">@Model.Message</h1>
    }
    <a asp-page="/index" class="mt-5 text-primary">بازگشت به صفحه اصلی</a>
</div>