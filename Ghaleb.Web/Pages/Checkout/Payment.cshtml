@page
@model Ghaleb.Web.Pages.Checkout.PaymentModel
@{
}

<div class="row d-flex justify-content-between">
    <div class="col-12 col-lg-3 bg-white box p-5 mb-3 order-1">
        <table class="table table-striped responsive-md" style="height: 200px;
        vertical-align: middle;">
            <tbody>
                <tr>
                    <td>مبلغ کل فاکتور</td>
                    <td> @Model.TotalPrice.ToString("n0").toPersianNumber() تومان</td>
                </tr>
                <tr>
                    <td>هزینه حمل و نقل</td>
                    <td> @Model.DeliverPrice.ToString("n0").toPersianNumber() تومان</td>
                </tr>
                <!-- <tr>
                    <td>مالیات ارزش افزوده</td>
                    <td> 50000 تومان</td>
                </tr> -->
                <tr sty>
                    <td style="font-size:19px ;">مبلغ قابل پرداخت</td>
                    <td style="font-size:19px ;"> @Model.PaymentPrice.ToString("n0").toPersianNumber() تومان</td>
                </tr>
            </tbody>
        </table>

        <form method="post">
            <button type="submit" class=" col-12 btn btn-success " style="height:50px ;font-size:15px ;">
                پرداخت
            </button>
        </form>
        @*        <button *ngIf="redirectToBank" class=" col-12 btn btn-success " style="height:50px ;font-size:15px ;">
        هدایت به درگاه بانکی
        </button>*@
    </div>
    <div class="col-12 col-lg-9 table-responsive">
        <table class="table table-striped " *ngIf="items.length>0">

            <thead>
                <tr>
                    <th>#</th>
                    <th>عکس محصول</th>
                    <th>نام محصول</th>
                    <th>قیمت واحد</th>
                    <th>تعداد</th>
                    <th>قیمت کل</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.List)
                {

                    <tr *ngFor="let item of data" style="vertical-align:middle ;">
                        <td>
                            1
                        </td>
                        <td>
                            <img src="@item.Image" style="width:100px;height:100px ;">
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Price.ToString("n0").toPersianNumber() تومان
                        </td>
                        <td>
                            @item.Count.ToString("n0").toPersianNumber()
                        </td>
                        <td>
                            @item.TotalPrice.ToString("n0").toPersianNumber() تومان
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-12 col-lg-9">
            <h4>مشخصات گیرنده</h4>
            <table class="table table-striped">

                <thead>
                    <tr>
                        <th>آدرس</th>
                        <th>تلفن</th>
                        <th>موبایل</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="vertical-align:middle ;">
                        <td>
                        @Model.Address.Address پلاک @Model.Address.Pelak.ToString().toPersianNumber() واحد @Model.Address.Vahed.ToString().toPersianNumber()
                        </td>
                        <td>
                            @Model.Address.Phone.ToString().toPersianNumber()
                        </td>
                        <td>
                            @Model.Address.Mobile.ToString().toPersianNumber()
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
