@page
@model Ghaleb.Web.Pages.Checkout.AddressModel
@{
}


<form method="post" class="row bg-white p-5">
    <h4>لطفا یک آدرس انتخاب نمایید</h4>

    <div class="col-12 col-lg-12 ">
        <div class="row">
            @foreach (var item in Model.Addresses)
            {
                <div class="col-12 col-lg-2" style="
                background: #f1f1f1;
                height: 150px;
                padding: 10px;
                border-radius: 15px;margin-left: 5px;" *ngFor="let item of addresses">
                    <input type="radio" name="addressId" value="@item.Id" required>
                    <br>
                    موبایل : @item.Mobile
                    <br>
                    تلفن : @item.Phone
                    <br>
                    آدرس : @item.Address
                </div>
            }

            <div class="col-12 col-lg-2 p-4 d-flex mt-3 mt-lg-0 justify-content-center
                align-items-center" style="
                background: #f1f1f1;
                height: 150px;
                padding: 10px;
                border-radius: 15px;"  data-bs-toggle="modal" data-bs-target="#exampleModal">

                افزودن آدرس جدید
            </div>
        </div>
    </div>


    <div class="col-12 mt-2 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary col-12 col-lg-3 ">
            تکمیل
            فرایند
        </button>
    </div>
    <!-- <div id="map"></div> -->

</form>
@section Modal{
    <div class="modal  fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">ثبت آدرس جدید</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @await Component.InvokeAsync("Address")
                </div>
            </div>
        </div>
    </div>
        }