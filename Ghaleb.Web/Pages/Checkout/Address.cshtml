@page
@model Ghaleb.Web.Pages.Checkout.AddressModel
@{
}

<form asp-page-handler="Pay" class="container">
    <div class="row">
        <div class="col-12">
            <ul class="progressbar">
                <li class="active">
                    سبد خرید
                </li>
                <li class="active">
                    اطلاعات
                </li>
                <li class="active">
                    پرداخت
                </li>
            </ul>
        </div>
        <div class="col-lg-8">
            <div class="cart-checkout_address">
                <label class="card-title">
                    آدرس تحویل سفارش
                </label>
                <div class="list-address mb-3">
                    @foreach (var item in Model.Addresses)
                    {
                        <div class="d-flex justify-content-between ">
                            <div class="custom-control custom-radio mb-2">
                                <input type="radio" class="custom-control-input" @(Model.Addresses[0] == item ? "checked" : "") id="customRadio-@item.Id" name="addressId"
                                       value="@item.Id">
                                <label class="custom-control-label" for="customRadio-@item.Id"> @item.Address</label>
                            </div>
                            @*							<div class="dropdown dropright">
                        <a class="btn dropdown-toggle" data-toggle="dropdown" >
                        <i class="fa fa-circle"></i>
                        </a>
                        <div class="dropdown-menu">
                        <a class="dropdown-item" data-toggle="modal" data-target="#EditAddressModal">
                        <i class="fa fa-edit"></i>ویرایش آدرس
                        </a>
                        <a class="dropdown-item" asp-page="Address" asp-page-handler="Delete" asp-route-Id="@item.Id"><i class="fa fa-trash"></i>حذف آدرس</a>
                        </div>
                        </div>*@
                        </div>
                    }
                </div>
                <ul>
                    <li>
                        <a data-toggle="modal" data-target="#CreateAddressModal" class="btn btn-add-address">
                            ایجاد آدرس
                        </a>
                    </li>
                </ul>
                <label class="card-title">زمان تحویل سفارش</label>
                <p class="mb-4">لطفا روزی را که می خواهید ارسال کنید انتخاب کنید.</p>
                @{
                    int index = 0;
                }
                <div class="box-tab-time">
                    <ul class="nav nav-pills justify-content-between">
                        @for (PersianDateTime i = PersianDateTime.Now; i < PersianDateTime.Now.AddDays(6); i = i.AddDays(1))
                        {
                            <li class="nav-item flex-grow-1">
                                <a class="nav-link @(index==0?"active":"")" data-toggle="pill" href="#tab-@index">
                                    @i.DayName
                                    <span>@i.Month/@i.Day</span>
                                </a>
                            </li>
                            index = index + 1;
                        }
                    </ul>
                    @{
                        index = 0;
                        int g = 0;
                    }
                    <!-- Tab panes -->
                    <div class="tab-content">

                        @for (PersianDateTime i = PersianDateTime.Now; i < PersianDateTime.Now.AddDays(6); i = i.AddDays(1))
                        {
                            <div class="tab-pane container @(index==0?"active":"")" id="tab-@index">
                                <div class="d-flex justify-content-center mt-3">
                                    <input value="@i.ToDateTime()" hidden name="Date">
                                    @for (TimeSpan t = TimeSpan.Parse("09:00"); t < TimeSpan.Parse("21:00"); t = t.Add(TimeSpan.FromHours(4)))
                                    {
                                        <div class="custom-control custom-radio mx-2">

                                            <input type="radio" class="custom-control-input" id="timing-@g" name="time"
                                                   value="@i.ToDateTime();@t.Hours-@t.Add(TimeSpan.FromHours(4)).Hours">
                                            <label class="custom-control-label" for="timing-@g">
                                                @t.Hours - @t.Add(TimeSpan.FromHours(4)).Hours ساعت
                                            </label>
                                        </div>
                                        g = g + 1;
                                    }
                                </div>
                            </div>
                            index = index + 1;
                        }
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-4">
            <div class="cart_page_aside">
                <div class="d-flex p-20">
                    <div class="">قیمت کالاها :</div>
                    <div class="ml-auto">@Model.Order.ProductPrices.ToString("n0") تومان</div>
                </div>
                @*				<div class="d-flex p-20">
                <div class="">تخفیف کالا :</div>
                <div class="ml-auto checkout_discount_price">20,000 ريال</div>
                </div>*@
                <div class="p-20">
                    <img src="~/assets/img/Delivery.svg" alt="" width="30px">
                    هزینه حمل و نقل :
                    @if (Model.Order.DeliveryPrice != 0)
                    {
                        <span>@Model.Order.DeliveryPrice.ToString("n0") تومان</span>
                    }
                    else
                    {
                        <span>رایگان</span>
                    }
                </div>
                <input name="DeliveryPriceId" hidden value="@Model.Order.DeliveryId" />
                <div class="d-flex p-20">
                    <div class="">مبلغ قابل پرداخت :</div>
                    <div class="ml-auto">@Model.Order.TotalPrice.ToString("n0") تومان</div>
                </div>
                <div class="p-20">
                    <p class="text-center">روش پرداخت</p>
                    <div class="d-flex justify-content-center mt-3">
                        <div class="custom-control custom-radio mx-2">
                            <input type="radio" class="custom-control-input" id="way1" checked name="payType"
                                   value="0">
                            <label class="custom-control-label" for="way1">
                                درگاه پرداخت بانکی
                            </label>
                        </div>
                        <div class="custom-control custom-radio mx-2">
                            <input type="radio" class="custom-control-input" id="way2" name="payType"
                                   value="1">
                            <label class="custom-control-label" for="way2">
                                کیف پولی
                            </label>
                        </div>
                    </div>
                </div>
                <div class="p-20">

                    <button type="submit" class="btn btn-continue">
                        ادامه خرید
                    </button>
                </div>
            </div>

        </div>
    </div>
</form>
